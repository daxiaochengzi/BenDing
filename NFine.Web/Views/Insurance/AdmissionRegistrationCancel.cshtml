            //form数据回显:数据回显到Form表单主体部分
            $('#HospitalizationRegisterCancel').on('click', function() {
                var params = {
                    "TransKey": $("#transkey").val() /*医保交易码*/,
                    "BusinessId": $("#bid").val() /*当前住院记录的业务ID*/,
                    "UserId": $("#empid").val() /*授权操作人的ID*/
